<Window x:Class="CashFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CashFlow" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar sinistra -->
            <ColumnDefinition Width="160"/>
            <!-- Contenuto centrale -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" 
                Background="#23262B" 
                Padding="10">
            <StackPanel VerticalAlignment="Stretch" 
                        Orientation="Vertical">
                <TextBlock Text="CASHFLOW"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,20"/>
                <Button Content="Transazioni"
                        Command="{Binding NavigateToTransactionsCommand}"
                        Foreground="#23262B"
                        Margin="5"/>
                <Button Content="Riepilogo"
                        Command="{Binding NavigateToSummaryCommand}"
                        Foreground="#23262B"
                        Margin="5"/>
                <Button Content="Attività"
                        Command="{Binding NavigateToActivitiesCommand}"
                        Foreground="#23262B"
                        Margin="5"/>
            </StackPanel>
        </Border>

        <!-- Contenuto centrale -->
        <Grid Grid.Column="1" Margin="10">
            <ContentControl Content="{Binding CurrentView}"/>
        </Grid>
    </Grid>
</Window>